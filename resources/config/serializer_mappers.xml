<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="jungi.message_conversion_mapper.serializer.json" class="Jungi\FrameworkExtraBundle\Http\Conversion\Mapper\SerializerMapperAdapter">
            <tag name="jungi.message_conversion_mapper" media-type="application/json" />
            <tag name="jungi.message_conversion_mapper" media-type="application/x-json" />

            <argument>json</argument>
            <argument type="service" id="serializer" />
        </service>
        <service id="jungi.message_conversion_mapper.serializer.xml" class="Jungi\FrameworkExtraBundle\Http\Conversion\Mapper\SerializerMapperAdapter">
            <tag name="jungi.message_conversion_mapper" media-type="application/x-xml" />
            <tag name="jungi.message_conversion_mapper" media-type="application/xml" />
            <tag name="jungi.message_conversion_mapper" media-type="text/xml" />

            <argument>xml</argument>
            <argument type="service" id="serializer" />
        </service>
    </services>
</container>
